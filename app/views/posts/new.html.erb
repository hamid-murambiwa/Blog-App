<div class="form">
<section class="form-group">
  <div class="btn-con">
    <h2>Add Food</h2>
  </div>

  <%= form_with model: @post, url: user_posts_path, scope: :post, html: {class: "post-form-container"} do |form| %>
      <div class="field">
        <%= form.label :title, "Title" %><br />
        <%= form.text_field :title, class: "post-input", placeholder: "Title", required: true %>
      </div>

      <div class="field">
      <%= form.label :title, "Body", class: "label" %><br />
      <%= form.text_area :text, class: "post-input", placeholder: "Type here...", rows: 10, required: true %>
      </div>

      <div class="btn-con">
       <%= form.submit "Save Post", class: "submit-button" %>
      </div>
    <% end %>
</section>
</div>