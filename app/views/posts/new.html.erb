<h1>Create a post</h1>
<%= form_with model: @post, url: posts_index_path, scope: :post, html: {class: "post-form-container"} do |form| %>
    <table>
    
    <tr>
    <th><%= form.label :title, "Title", class: "label" %></th>
    <td><%= form.text_field :title, required: true %></td>
    </tr>

    <tr>
        <th><%= form.label :title, "Content", class: "label" %></th>
        <td><%= form.text_area :text, placeholder: "Type here...", rows: 10, required: true %></td>
    </tr>

    </table>

    <div class="form-button">
        <%= form.submit "Save Post", class: "submit-button" %>
    </div>
<% end %>