<%= form_with url: user_post_comments_path(@post.user_id, @post), scope: :comment do |form| %>
    <div class="comment-c">
	    <%= form.text_area :text, placeholder: "Add your comment...", class: "comment-input", rows: 14, required: true %>
		<div class="btn-con">
	    <%= form.submit "Comment", class: "submit-show-button" %>
		</div>
    </div>
<% end %>